{
    "manifest_version": 3,
    "name": "ZAR Currency Converter",
    "version": "1.0",
    "description": "Converts prices on webpages to South African Rand (ZAR)",
    "permissions": ["activeTab", "storage"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png",
        }
    }
}